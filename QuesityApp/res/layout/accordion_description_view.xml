<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:quesity="http://schemas.android.com/apk/res/com.quesity"
 	android:orientation="vertical"
 	android:layout_height="fill_parent"
 	android:layout_width="fill_parent"   
 >
<RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/accordion_spacing"
    android:paddingTop="@dimen/accordion_spacing_vertical"
    android:paddingBottom="@dimen/accordion_spacing_vertical" >
    <ImageView 
    	android:id="@+id/quest_accordion_image"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:src="@drawable/desc"
    	android:layout_centerVertical="true"
    	android:scaleType="fitXY"
    	android:scaleX="@dimen/accordion_image_scale"
    	android:scaleY="@dimen/accordion_image_scale"
    	android:layout_marginRight="@dimen/accordion_spacing"
    />
    <com.quesity.fragments.StyledTextView
        android:id="@+id/quest_description_text_view"
        quesity:font_path="fonts/Roboto-Regular.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/quest_accordion_image"
        android:textColor="@color/quesity_title_color"
        android:layout_centerVertical="true"
        android:textSize="@dimen/accordion_text_size"
        android:text="Description"
    />

</RelativeLayout>
   <View 
    android:id="@+id/accordion_sep_view"
    android:layout_width="fill_parent"
    android:layout_height="0.2sp"
    android:background="@color/quesity_title_color"
    />
</LinearLayout>