<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:quesity="http://schemas.android.com/apk/res/com.quesity"
    
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/quest_list_item_padding"
    android:orientation="vertical" >
    
	<ImageView
	    android:id="@+id/quest_img"
	    android:layout_width="60dip"
	    android:layout_height="60dip"
	    android:layout_alignParentLeft="true"
	    android:layout_marginRight="5dip"
	    android:src="@drawable/logo_temp"/>

	<com.quesity.fragments.StyledTextView
	    android:id="@+id/quest_list_title"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@+id/quest_img"
	    android:text="Bla Bla Bla"
	    quesity:font_path="fonts/Roboto-Regular.ttf"
	    android:textSize="18dp"
	    android:layout_marginBottom="@dimen/quest_list_item_properties_margin"
	 />
	
	<ImageButton 
	    android:id="@+id/quest_list_bookmark_btn"
		android:background="@drawable/book_empty"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:scaleType="fitXY"
		android:scaleX="0.5"
		android:scaleY="0.5"
	/>
	
	<RatingBar android:id="@+id/quest_list_rating_bar"
	    	   style="@style/quest_rating_bar"
	    	   android:layout_below="@id/quest_list_title"
	    	   android:layout_toRightOf="@id/quest_img"
	    	   android:layout_height="wrap_content"
	    	   android:layout_width="wrap_content"
	    />
	<com.quesity.fragments.StyledTextView
	    android:id="@+id/quest_list_rating_text"
	 	android:layout_width="wrap_content"
	 	android:layout_height="wrap_content"
	 	android:layout_toRightOf="@id/quest_list_rating_bar"
	 	android:layout_below="@id/quest_list_title"
	 	quesity:font_path="fonts/Roboto-Light.ttf"
		android:textSize="@dimen/quest_list_text_size"
	 	android:text="(5.0)"
	 />
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	 	android:orientation="horizontal"
	 	android:weightSum="3"
	 	android:layout_marginTop="@dimen/quest_list_item_properties_margin"
	 	android:layout_marginBottom="@dimen/quest_list_item_properties_margin"
	 	android:layout_below="@id/quest_list_rating_bar"
	 	
	 	>
	 	
	    <com.quesity.fragments.StyledTextView 
	        quesity:font_path="fonts/Roboto-Light.ttf"
	        android:id="@+id/quest_list_distance"
		    android:layout_width="0dp"
		    android:layout_weight="1"
		    android:layout_height="wrap_content"
		    android:textAlignment="center"
		    android:gravity="center"
		    android:textSize="@dimen/quest_list_text_size"
		    android:text="8\nKm"
	    />
		<com.quesity.fragments.StyledTextView
		    quesity:font_path="fonts/Roboto-Light.ttf"
		    android:id="@+id/quest_list_time"
		    android:layout_width="0dp"
		    android:layout_weight="1"
		    android:layout_height="wrap_content"
		    android:textAlignment="center"
		    android:gravity="center"
		    android:textSize="@dimen/quest_list_text_size"
		    android:text="2.5\nHours"/>
		<com.quesity.fragments.StyledTextView
		    quesity:font_path="fonts/Roboto-Light.ttf"
		    android:id="@+id/quest_list_played"
		    android:layout_width="0dp"
		    android:layout_weight="1"
		    android:layout_height="wrap_content"
		    android:textAlignment="center"
		    android:gravity="center"
		    android:textSize="@dimen/quest_list_text_size"
		    android:text="1658\nPlayed"/>
	    
	</LinearLayout>
</RelativeLayout>
