<FrameLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quest_page_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
>
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".QuestPageActivity" >

    <fragment
        android:id="@+id/webview_fragment"
        android:name="com.quesity.fragments.WebViewFragment"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.87"
    />
    
      <fragment
        android:id="@+id/ingame_menu_fragment"
        android:name="com.quesity.fragments.InGameMenuFragment"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.13"
        />

      <FrameLayout
          android:id="@+id/transition_place_holder"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal" >
      </FrameLayout>
        
</LinearLayout>
</FrameLayout>

