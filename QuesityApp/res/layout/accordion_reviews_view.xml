<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:quesity="http://schemas.android.com/apk/res/com.quesity"
    android:orientation="vertical" >
    
    
    <com.quesity.fragments.StyledTextView 
     	android:id="@+id/lbl_no_reviews"
     	android:layout_width="wrap_content"
     	android:layout_height="wrap_content"
     	android:padding="20dp"   
     	android:layout_centerInParent="true"
     	android:text="@string/lbl_no_reviews"
     	quesity:font_path="fonts/Roboto-Light.ttf"
     	android:textSize="20sp"
     	android:textColor="@color/quesity_title_color"
     	android:layout_marginTop="20dp"
     	android:background="@drawable/no_reviews_text_msg"
     />

</RelativeLayout>
