<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_screen"
    android:id="@+id/layout_container"
    tools:context=".QuesityMain" >
    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:id="@+id/frag_background_image"
		android:name="com.quesity.fragments.BackgroundImageFragment"        
    />
    <TextView
        android:id="@+id/title_main_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="50sp"
        android:textColor="@color/quesity_title_color"
        android:textStyle="bold"
        android:layout_marginBottom="20sp"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <com.facebook.widget.ProfilePictureView 
        android:id="@+id/quesity_main_profile_pic"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@id/title_main_screen"
        facebook:preset_size="small"
        android:layout_marginLeft="20sp"/>
    <TextView 
    	android:id="@+id/txt_welcome_msg"
    	android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:textColor="@color/quesity_title_color"
        android:layout_toRightOf="@id/quesity_main_profile_pic"
        android:layout_alignBottom="@id/quesity_main_profile_pic"
        android:layout_marginLeft="10sp"
    />
    
    <TextView 
        android:id= "@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_version"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/title_main_screen"
        android:layout_alignBottom="@+id/title_main_screen" />

            <Button
                android:id="@+id/btn_find_quest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lbl_find_quest" 
                android:layout_below="@+id/quesity_main_profile_pic"
                android:onClick="findQuestAction"
                android:layout_marginBottom="20sp"
                android:layout_marginTop="20sp"/>
            <Button
                android:id="@+id/btn_my_quests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lbl_my_quests" 
                android:layout_below="@+id/btn_find_quest"
                android:layout_marginBottom="20sp"/>
    		<fragment
		        android:id="@+id/main_login_fragment"
		        android:name="com.quesity.fragments.LoginFragment"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_horizontal"
		        android:layout_alignParentBottom="true"
		        android:layout_centerHorizontal="true"
		        />

</RelativeLayout>