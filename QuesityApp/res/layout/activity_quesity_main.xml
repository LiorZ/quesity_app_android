<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_screen"
    tools:context=".QuesityMain" >
    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginTop="90sp"
        android:scaleType="fitStart"
		android:layout_centerHorizontal="true"
        android:src="@drawable/logo_temp" 
        android:alpha="0.2"/>
    <TextView
        android:id="@+id/title_main_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="50sp"
        android:textColor="@color/quesity_title_color"
        android:textStyle="bold"
        android:layout_marginBottom="20sp"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />
            
           <TextView 
        android:id= "@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_version"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/title_main_screen"
        android:layout_alignBottom="@+id/title_main_screen" />

            <Button
                android:id="@+id/btn_create_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_create_event" 
                android:layout_below="@+id/title_main_screen"
                android:onClick="showQuests"
                android:layout_marginBottom="20sp"/>
            <Button
                android:id="@+id/btn_join_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_join_event" 
                android:layout_below="@+id/btn_create_event"
                android:layout_marginBottom="20sp"/>
           	<Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_logout" 
                android:layout_below="@+id/btn_join_event"
                android:onClick="performLogout"/>
            
            

</RelativeLayout>