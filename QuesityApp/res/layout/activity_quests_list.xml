<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:quesity="http://schemas.android.com/apk/res/com.quesity"
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_gradient">
    
    <com.quesity.fragments.QuesityPageTitleView
   		android:id="@+id/title_find_quest"
   		android:layout_width="match_parent"
   		android:layout_height="wrap_content"
   		quesity:page_title_text="@string/lbl_find_quest"
   		quesity:title_icon="@drawable/search"
   		quesity:title_text_size="20sp"
    />
    
    <ListView
        android:id="@+id/quest_list_fragment"
        android:name="com.quesity.fragments.QuestsListFragment"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:divider="#00000000"
        android:cacheColorHint="#00000000"
        android:layout_below="@id/title_find_quest" >
        
    </ListView>

</RelativeLayout>