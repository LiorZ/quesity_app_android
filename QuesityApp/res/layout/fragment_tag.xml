<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    
    <ImageView 
        android:id="@+id/tag_left_corner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tag_left"
        android:layout_alignParentLeft="true"
     />
    <RelativeLayout 
     	android:id="@+id/tag_text_container"   
     	android:background="@color/tag_color"
     	android:layout_width="wrap_content"
     	android:layout_height="30px"
     	android:layout_toRightOf="@id/tag_left_corner"
		android:padding="@dimen/tag_padding"
     >
    <TextView 
        android:id="@+id/tag_text"
        android:textColor="@color/white"
        android:textSize="@dimen/tag_font_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Some Tag"
        />    
    </RelativeLayout>
    

</RelativeLayout>
